<?xml version="1.0" encoding="UTF-8"?>
<root BTCPP_format="4"
      main_tree_to_execute="Drone">
  <BehaviorTree ID="Drone">
    <Sequence name="ColonizeUniverse">
      <Fallback>
        <FindNextSystem/>
        <Terminate/>
      </Fallback>
      <ReactiveSequence>
        <CheckForDamage/>
        <Travel/>
      </ReactiveSequence>
      <Sequence name="Colonize">
        <GetTargetsAvailable targetsAvailable=""
                             findMax="0"/>
      </Sequence>
    </Sequence>
  </BehaviorTree>

  <BehaviorTree ID="Seed">
    <Sequence>
      <SetFactionBlackboard/>
      <GetTargetsAvailable targetsAvailable=""
                           findMax="1"/>
      <MakeDrone/>
    </Sequence>
  </BehaviorTree>

  <!-- Description of Node Models (used by Groot) -->
  <TreeNodesModel>
    <Condition ID="CheckForDamage"
               editable="true"/>
    <Action ID="FindNextSystem"
            editable="true"/>
    <Action ID="GetTargetsAvailable"
            editable="true">
      <output_port name="targetsAvailable">available targets list</output_port>
      <input_port name="findMax"
                  default="-1">Maximum number of targets to find</input_port>
    </Action>
    <Action ID="MakeDrone"
            editable="true"/>
    <Action ID="SetFactionBlackboard"
            editable="true"/>
    <Action ID="Terminate"
            editable="true"/>
    <Action ID="Travel"
            editable="true"/>
  </TreeNodesModel>

</root>
