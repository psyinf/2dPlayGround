<?xml version="1.0" encoding="UTF-8"?>
<root BTCPP_format="4"
      main_tree_to_execute="Drone">
  <BehaviorTree ID="Drone">
    <Sequence name="ColonizeUniverse">
      <Fallback>
        <FindNextSystem/>
        <Terminate/>
      </Fallback>
      <ReactiveSequence>
        <CheckForDamage/>
        <Travel/>
      </ReactiveSequence>
      <Sequence name="Colonize">
        <GetTargetsAvailable targetsAvailable=""/>
        <KeepRunningUntilFailure>
          <BuildDrone/>
        </KeepRunningUntilFailure>
      </Sequence>
    </Sequence>
  </BehaviorTree>

  <!-- Description of Node Models (used by Groot) -->
  <TreeNodesModel>
    <Action ID="BuildDrone"
            editable="true"/>
    <Condition ID="CheckForDamage"
               editable="true"/>
    <Action ID="FindNextSystem"
            editable="true"/>
    <Action ID="GetTargetsAvailable"
            editable="true">
      <output_port name="targetsAvailable">available targets list</output_port>
    </Action>
    <Action ID="Terminate"
            editable="true"/>
    <Action ID="Travel"
            editable="true"/>
  </TreeNodesModel>

</root>
