<?xml version="1.0" encoding="UTF-8"?>
<root BTCPP_format="4"
      main_tree_to_execute="Drone">
  <BehaviorTree ID="Drone">
    <Sequence name="ColonizeUniverse">
      <Fallback>
        <FindNextSystem/>
        <AlwaysSuccess name="Terminate"
                       _description="Later: The drone instead could be refunctioned for defense "/>
      </Fallback>
      <ReactiveSequence>
        <CheckForDamage/>
        <Travel/>
      </ReactiveSequence>
      <Sequence name="Colonize">
        <AlwaysSuccess/>
      </Sequence>
    </Sequence>
  </BehaviorTree>

  <!-- Description of Node Models (used by Groot) -->
  <TreeNodesModel>
    <Condition ID="CheckForDamage"
               editable="true"/>
    <Action ID="FindNextSystem"
            editable="true"/>
    <Action ID="Travel"
            editable="true"/>
  </TreeNodesModel>

</root>
